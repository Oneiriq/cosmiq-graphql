{
	"lock": true,

	"name": "@albedosehen/cosmosdb-schemagen",
  "version": "0.1.0",
  "description": "A data-first schema SDL generator and validator for Azure Cosmos DB, GraphQL, and GraphQL Mesh.",
  "author": "Shon Thomas",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/albedosehen/cosmosdb-schemagen.git"
  },
  "homepage": "https://github.com/albedosehen/cosmosdb-schemagen#readme",
  "keywords": [
    "cosmosdb",
    "sdl",
    "schema",
    "graphql",
    "data-validation",
    "deno",
    "typescript",
    "graphql-mesh",
    "data-first",
    "codegen"
  ],
	"exports": {
		".": "./mod.ts",
		"./types": "./src/types/mod.ts",
		"./utils": "./src/utils/mod.ts",
		"./errors": "./src/errors/mod.ts"
	},
	"compilerOptions": {
		"strict": true
	},
	"tasks": {
    "bench": "deno bench --allow-read --allow-write --allow-net --allow-sys",
    "build:npm": "deno run -A scripts/build_npm.ts",
		"check": "deno check mod.ts src/",
		"coverage:lcov": "deno coverage coverage/ --lcov --output=coverage.lcov",
		"coverage": "deno coverage coverage/ --html",
		"fmt:check": "deno fmt --check",
		"fmt": "deno fmt",
		"lint": "deno lint",
		"test": "deno test --allow-read --allow-write --allow-net --allow-sys -q",
		"test:coverage": "deno test --allow-read --allow-write --allow-net --allow-sys --coverage=coverage/ -q",
		"test:watch": "deno test --allow-read --allow-write --allow-net --allow-sys --watch -q"
	},
	"lint": {
		"include": ["src/"],
		"exclude": ["node_modules/", "dist/", "coverage/", "docs/", "documentation/"],
		"rules": {
			"tags": ["recommended"],
			"include": [
				"ban-untagged-todo",
				"no-unused-vars",
				"no-explicit-any",
				"no-irregular-whitespace",
				"default-param-last",
				"no-deprecated-deno-api",
				"no-import-assign",
				"no-sloppy-imports",
				"no-delete-var",
				"no-useless-rename",
				"no-extra-boolean-cast",
				"no-invalid-regexp",
				"no-slow-types"
			],
			"exclude": [
				"require-await"
			]
		}
	},

	"fmt": {
		"useTabs": false,
		"lineWidth": 120,
		"indentWidth": 2,
		"semiColons": false,
		"singleQuote": true,
		"proseWrap": "preserve",
		"include": ["src/"],
		"exclude": ["node_modules/", "dist/", "coverage/", "docs/", "documentation/", "*.json", "*.graphql", "*.md"]
	},

	"imports": {
		"@std/assert": "jsr:@std/assert@^1.0.0",
		"@std/testing": "jsr:@std/testing@^1.0.0",
		"@std/testing/bdd": "jsr:@std/testing@^1.0.0/bdd",
		"@std/testing/mock": "jsr:@std/testing@^1.0.0/mock",
		"@std/streams": "jsr:@std/streams@^1.0.0",
		"@std/async": "jsr:@std/async@^1.0.0"
	},
	"exclude": []
}

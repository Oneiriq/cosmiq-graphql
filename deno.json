{
	"lock": true,

	"name": "@oneiriq/cosmiq",
	"version": "0.3.0",
	"description": "Data-first GraphQL for Azure CosmosDB",
  "author": "Shon Thomas",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/albedosehen/cosmiq.git"
  },
  "homepage": "https://github.com/albedosehen/cosmiq#readme",
  "keywords": [
    "cosmosdb",
    "sdl",
    "schema",
    "graphql",
    "data-validation",
    "deno",
    "typescript",
    "graphql-mesh",
    "data-first",
    "codegen"
  ],
	"exports": {
		".": "./mod.ts",
		"./generic": "./src/adapters/generic.ts",
		"./mesh": "./src/adapters/mesh.ts",
		"./apollo": "./src/adapters/apollo.ts",
		"./yoga": "./src/adapters/yoga.ts",
		"./hive": "./src/adapters/hive.ts",
		"./adapters": "./src/adapters/mod.ts",
		"./errors": "./src/errors/mod.ts",
    "./handler": "./src/handler/mod.ts",
    "./infer": "./src/infer/mod.ts",
    "./schema": "./src/schema/mod.ts",
		"./types": "./src/types/mod.ts",
		"./utils": "./src/utils/mod.ts"
	},
	"compilerOptions": {
		"strict": true
	},
	"tasks": {
    "bench": "deno bench --allow-read --allow-write --allow-net --allow-sys",
    "build": "deno run -A scripts/package/npm.ts",
		"check": "deno check mod.ts src/",
		"coverage:lcov": "deno coverage coverage/ --lcov --output=coverage.lcov",
		"coverage": "deno coverage coverage/ --html",
		"fmt:check": "deno fmt --check",
		"fmt": "deno fmt",
		"lint": "deno lint",
		"test": "deno test --allow-read --allow-write --allow-net --allow-sys --allow-env -q",
		"test:coverage": "deno test --allow-read --allow-write --allow-net --allow-sys --allow-env --coverage=coverage/ -q",
		"test:watch": "deno test --allow-read --allow-write --allow-net --allow-sys --allow-env --watch -q",
    "seed": "deno run --allow-read --allow-write --allow-net --unsafely-ignore-certificate-errors=localhost,127.0.0.1 scripts/seed/seed.ts --seed-db",
    "seed:files": "deno run --allow-read --allow-write --allow-net --unsafely-ignore-certificate-errors=localhost,127.0.0.1 scripts/seed/seed.ts --files 100 --seed-db",
    "seed:listings": "deno run --allow-read --allow-write --allow-net --unsafely-ignore-certificate-errors=localhost,127.0.0.1 scripts/seed/seed.ts --listings 100 --seed-db",
    "seed:users": "deno run --allow-read --allow-write --allow-net --unsafely-ignore-certificate-errors=localhost,127.0.0.1 scripts/seed/seed.ts --users 100 --seed-db",
    "example:yoga-server": "deno run --allow-net --allow-env --unsafely-ignore-certificate-errors=localhost,127.0.0.1 examples/deno/yoga-server.ts",
    "example:apollo-server": "deno run --allow-net --allow-env --unsafely-ignore-certificate-errors=localhost,127.0.0.1 examples/deno/apollo-server.ts",
    "example:sdl-spec": "deno run --allow-net --allow-env --unsafely-ignore-certificate-errors=localhost,127.0.0.1 examples/deno/cosmosdb-sdl-spec.ts",
    "example:json-spec": "deno run --allow-net --allow-env --unsafely-ignore-certificate-errors=localhost,127.0.0.1 examples/deno/cosmosdb-json-spec.ts"
	},
	"lint": {
		"include": ["src/"],
		"exclude": ["node_modules/", "dist/", "coverage/", "docs/", "documentation/", "npm/", "npm-test/"],
		"rules": {
			"tags": ["recommended"],
			"include": [
				"ban-untagged-todo",
				"no-unused-vars",
				"no-explicit-any",
				"no-irregular-whitespace",
				"default-param-last",
				"no-deprecated-deno-api",
				"no-import-assign",
				"no-sloppy-imports",
				"no-delete-var",
				"no-useless-rename",
				"no-extra-boolean-cast",
				"no-invalid-regexp",
				"no-slow-types"
			],
			"exclude": [
				"require-await"
			]
		}
	},

	"fmt": {
		"useTabs": false,
		"lineWidth": 120,
		"indentWidth": 2,
		"semiColons": false,
		"singleQuote": true,
		"proseWrap": "preserve",
		"include": ["src/"],
		"exclude": ["node_modules/", "dist/", "coverage/", "docs/", "documentation/", "*.json", "*.graphql", "*.md", "npm/", "npm-test/"]
	},

	"imports": {
    "@azure/cosmos": "npm:@azure/cosmos@^4.9.0",
    "graphql": "npm:graphql@^16.12.0",
    "graphql-yoga": "npm:graphql-yoga@^5.10.4",
    "@apollo/server": "npm:@apollo/server@^4.12.0",

    "@std/assert": "jsr:@std/assert@^1.0.0",
		"@std/testing": "jsr:@std/testing@^1.0.0",
		"@std/testing/bdd": "jsr:@std/testing@^1.0.0/bdd",
		"@std/testing/mock": "jsr:@std/testing@^1.0.0/mock",
		"@std/streams": "jsr:@std/streams@^1.0.0",
		"@std/async": "jsr:@std/async@^1.0.0"
	},
	"exclude": []
}
